<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDIN" parent="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/din_condensed_bold</item>
        <item name="editTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/din_condensed_bold</item>
    </style>

    <style name="AppThemeTahoma" parent="AppTheme.NoActionBar">
        <item name="android:textViewStyle">@style/PayTextViewStyle</item>
        <item name="android:actionBarStyle">@style/AppThemeTahoma.ActionBar</item>
        <item name="buttonStyle">@font/din_condensed_bold</item>
    </style>

    <style name="AppThemeTahoma.ActionBar">
        <item name="android:titleTextStyle">@style/AppThemeTahoma.Styled.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppThemeTahoma.Styled.ActionBar.TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PayTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/tahoma</item>
        <item name="fontFamily">@font/tahoma</item>
    </style>

    <style name="PayButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/din_condensed_bold</item>
        <item name="fontFamily">@font/din_condensed_bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
